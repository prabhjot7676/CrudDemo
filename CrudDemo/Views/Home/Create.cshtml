    <div class="form-group">
        <input type="button" onclick="Add(@Model.Id)" value="Create" class="btn btn-primary" />
    </div>
</form>
@section Scripts {
<script>

        function Add(Id) {
            
                var name = $('#name').val();
                $.ajax({
                    type: "POST",
                    url: '/Home/Create',
                    data: { Id: Id, Name: name },
                    success: function () {
                    window.location.href = '/Home/Index';

                    }
                });
            }

